translation = <%=raw @information.delete(:translations).join("\n").to_json %>;
$('#word_translation').val(translation);

examples = <%=raw @information.delete(:examples).join("\n").to_json %>;
$('#word_examples').val(examples);


synonyms = <%=raw @information.delete(:synonyms).to_json %>;
$('#word_synonyms').val(synonyms);

word_forms = <%=raw @information.delete(:class).to_json %>;
if (word_forms) {
  $('#word_wordform').val(word_forms);
}

grammar = <%= raw @information[:grammar].map{|i,j| i + ": " + j.gsub("\n"," - ") }.join("\n").to_json %>;
$('#word_grammar').val(grammar);
