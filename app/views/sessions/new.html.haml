- title t("Log in")

%p
  =t('no_account') 
  =link_to t("Sign up"), signup_path

- form_tag sessions_path do
  %p
    = label_tag :login, t("login.username")
    %br
    = text_field_tag :login, params[:login]
  %p
    = label_tag :password, t('login.password')
    %br
    = password_field_tag :password
  %p
    = submit_tag t("Log in")
